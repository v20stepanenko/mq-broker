<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="urn:activemq">
    <core>
        <!-- Назва брокера -->
        <name>broker</name>

        <!-- Налаштування адрес (address-settings) -->
        <address-settings>
            <address-setting match="client.processing.queue">
                <default-queue-routing-type>ANYCAST</default-queue-routing-type>
            </address-setting>
        </address-settings>

        <!-- Визначення адреси та черги -->
        <addresses>
            <address name="client.processing.queue">
                <anycast>
                    <queue name="client.processing.queue"/>
                </anycast>
            </address>
        </addresses>

        <!-- Налаштування приймачів з'єднань -->
        <acceptors>
            <acceptor name="artemis">tcp://0.0.0.0:61616</acceptor>
        </acceptors>
    </core>
</configuration>
